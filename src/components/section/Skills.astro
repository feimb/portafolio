---
import Section from "../Section.astro"

import { skills } from "@cv"
const { keywords } = skills[0]


---

<Section title="Skills">
    <ul>
        {
            keywords.map((name) =>{
                return(
                    <li>
                        <span>{name}</span>
                    </li>
                    
                )
                
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
    }
    li{
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>